datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
  }
  
  generator client {
    provider = "prisma-client-js"
  }
  
  model Customer {
    id          Int      @id @default(autoincrement())
    name        String
    email       String   @unique
    phoneNumber String
    bookings    Booking[]
  }
  
  model Booking {
    id           Int    @id @default(autoincrement())
    createdTime  DateTime
    droneShot    String
    customerId   Int
    customer     Customer @relation(fields: [customerId], references: [id])
  }
  