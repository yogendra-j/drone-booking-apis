datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  phoneNumber  String?
  bookings     Booking[]
}

model Booking {
  id           Int      @id @default(autoincrement())
  createdTime  DateTime @default(now())
  droneSite    DroneSite @relation(fields: [droneSiteId], references: [id], map: "droneSiteId_fkey")
  droneShot    DroneShotType @relation(fields: [droneShotId], references: [id], map: "droneShotId_fkey")
  customer     Customer @relation(fields: [customerId], references: [id], map: "customerId_fkey")
  customerId   Int
  droneSiteId  Int
  droneShotId  Int
}

model DroneSite {
  id           Int      @id @default(autoincrement())
  name         String
  address      String
  city         String
  state        String
  country      String
  zipCode      String
  bookings     Booking[]
}

model DroneShotType {
  id           Int      @id @default(autoincrement())
  name         String
  duration     Int
  price        Float
  bookings     Booking[]
}
